<ContentNavigationDrawer>:
    orientation: "vertical"
    padding: "8dp"
    spacing: "8dp"

    AnchorLayout:
        anchor_x: "left"
        size_hint_y: None
        height: avatar.height

        Image:
            id: avatar
            size_hint: None, None
            size: "56dp", "56dp"
            source: "images/padlock.png"

    MDLabel:
        text: "Manager Password"
        font_style: "Button"
        size_hint_y: None
        height: self.texture_size[1]

    MDLabel:
        text: "devmigueldev@gmail.com"
        font_style: "Caption"
        size_hint_y: None
        height: self.texture_size[1]
    MDIconButton:
        icon: "images/linkedin.png"
        on_release: root.sendLinkedin()

    ScrollView:

        DrawerList:
            id: md_list
            OneLineListItem:
                text: "Senhas"
                on_press:
                    app.change_screen("Senhas")
            OneLineListItem:
                text: "Help"
                on_press:
                    app.change_screen("Help")
    OneLineListItem:
        text: "Sair"
        theme_text_color: "Error"
        pos_hint: {"bottom": 1}
        on_press:
            app.change_screen("Sair")